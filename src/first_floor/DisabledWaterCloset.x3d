    <Scene>
        <!-- WC for disabled people/students - On the left side of the building -->
        <!-- Center: at the middle of the room, but on the floor -->
        <!-- Size: width = 224cm | heigth = 320 (height of square) | depth = 360cm -->
        
        <Group DEF='WallGroup'>
            <!-- Front wall (with main door) -->
            <!-- Translation:
                    |y| = 0.5*320cm = 160cm
                    |z| = 0.5*360cm - 0.5*24cm  = 168cm -->
            <Transform DEF='FrontWallTransform' translation='0 1.6 1.68'>
                <Shape DEF='FrontWallShape'>
                    <Appearance DEF='WallAppearance'>
                        <Material diffuseColor='1 1 1'/>
                    </Appearance>
                    <!-- Size:
                            w = 224cm (width of the room)
                            h = 320cm (height of the room)
                            d = 24cm (depth of the wall) -->
                    <Box size='2.24 3.20 0.24'/>
                </Shape>
            </Transform>
            <!-- Back wall (with window) -->
            <Transform DEF='BackWallTransform' translation='0 1.6 -1.68'>
                <Shape DEF='BackWallShape'>
                    <Appearance USE='WallAppearance'/>
                    <Box size='2.24 3.20 0.24'/>
                </Shape>
            </Transform>
            <!-- Side walls (perspective: inside out; in the door direction) -->
            <!-- Translation:
                    |x| = 0.5*224cm (room's width) - 0.5*24cm = 100cm -->
            <Transform DEF='LeftSideWallTransform' translation='1.00 1.6 0'>
                <Shape DEF='SideWallShape'>
                    <Appearance USE='WallAppearance'/>
                    <!-- Size:
                        width = 24cm (depth of fron/back wall)
                        depth = 360cm (depth of room) - 2*24cm (depth of fron/back wall) = 312cm -->
                    <Box size='0.24 3.20 3.12'/>
                </Shape>
            </Transform>
            <Transform DEF='RightSideWallTransform' translation='-1.00 1.6 0'>
                <Shape USE='SideWallShape'/>
            </Transform>
        </Group>
    </Scene>
</X3D>