    </head>
    <Scene>
        <!-- Temporary wall -->
        <Transform translation='0 13 -4'>
            <Shape>
                <Appearance>
                    <Material/>
                </Appearance>
                <!--
                    Width = 8 x 275cm + 5 x 90cm + 4 x 60cm = 2890cm
                    Height = 7 x 290cm + 6 x 90cm + padding = 2600cm
                    Depth = 2cm (dummy)
                -->
                <Box size='28.90 26 2'/>
            </Shape>
        </Transform>
        
        <!-- Base to support the buildings -->
        <Transform translation='0 0.50 -2'>
            <Shape>
                <Appearance>
                    <Material/>
                </Appearance>
                <!-- The height of the 'steps' is 102cm -> Let the height of the base be 100cm -->
                <Box size='28.90 1.00 5'/>
            </Shape>
        </Transform>
        
        <!-- Front columns on the surface of the main building -->
        <!-- Vertical columns - From left to right. Pattern: B-S-B-DS-B-DS-B-S-B -->
        <!-- Center: at the middle of the fifth (5th) column -->
        <Transform DEF='VerticalColumns' translation='0 13.85 0.25'>
            <Transform DEF='BigVerticalColumnTransform1' translation='-14.00 0 0'>
                <Shape DEF='BigVerticalColumnShape'>
                    <Appearance DEF='MainRedAppearance'>
                        <Material DEF='MainRedMaterial' diffuseColor='1 0 0'/>
                    </Appearance>
                    <!-- Height = 6 x 90cm + 7 x 450cm (height of square) = 3690cm -->
                    <Box size='0.90 25.70 0.5'/>
                </Shape>
            </Transform>
            <Transform DEF='SmallVerticalColumnTransform2' translation='-10.50 0 0'>
                <Shape DEF='SmallVerticalColumnShape'>
                    <Appearance USE='MainRedAppearance'/>
                    <Box size='0.60 25.70 0.5'/>
                </Shape>
            </Transform>
            <Transform DEF='BigVerticalColumnTransform3' translation='-7.00 0 0'>
                <Shape USE='BigVerticalColumnShape'/>
            </Transform>
            <Transform DEF='SmallVerticalColumnTransform4' translation='-3.50 3.80 0'>
                <Shape DEF='DoorSmallVerticalColumnShape'> <!-- Shorter height -> for door -->
                    <Appearance USE='MainRedAppearance'/>
                    <Box size='0.60 18.10 0.5'/>
                </Shape>
            </Transform>
            <Transform DEF='BigVerticalColumnTransform5' translation='0 0 0'>
                <Shape USE='BigVerticalColumnShape'/>
            </Transform>
            <Transform DEF='SmallVerticalColumnTransform6' translation='3.50 3.80 0'>
                <Shape USE='DoorSmallVerticalColumnShape'/>
            </Transform>
            <Transform DEF='BigVerticalColumnTransform7' translation='7.00 -0 0'>
                <Shape USE='BigVerticalColumnShape'/>
            </Transform>
            <Transform DEF='SmallVerticalColumnTransform8' translation='10.50 0 0'>
                <Shape USE='SmallVerticalColumnShape'/>
            </Transform>
            <Transform DEF='BigVerticalColumnTransform9' translation='14.00 0 0'>
                <Shape USE='BigVerticalColumnShape'/>
            </Transform>
        </Transform>
        
        <!-- Horizontal columns - From bottom to top. Pattern: -B(Left&Right)-B-B-B-B-B- -->
        <!-- Center: at the middle of the fourth (4th) colum -->
        <Transform DEF='HorizontalColumns' translation='0 15.75 0.25'>
            <Transform DEF='HorizontalColumnTransformLeft1' translation='-10.50 -11.40 0'>
                <Shape DEF='SmallHorizontalColumnShape'>
                    <Appearance USE='MainRedAppearance'/>
                    <!-- Width = 2 x Square.width + SmallVerticalColumn.width = 780cm -->
                    <Box size='6.10 0.9 0.5'/>
                </Shape>
            </Transform>
            <Transform DEF='HorizontalColumntransformRight1' translation='10.50 -11.40 0'>
                <Shape USE='SmallHorizontalColumnShape'/>
            </Transform>
            <Transform DEF='HorizontalColumnTransform2' translation='0 -7.60 0'>
                <Shape DEF='HorizontalColumnShape'>
                    <Appearance USE='MainRedAppearance'/>
                    <Box size='28.90 0.9 0.5'/>
                </Shape>
            </Transform>
            <Transform DEF='HorizontalColumnTransform3' translation='0 -3.80 0'>
                <Shape USE='HorizontalColumnShape'/>
            </Transform>
            <Transform DEF='HorizontalColumnTransform4' translation='0 0 0'>
                <Shape USE='HorizontalColumnShape'/>
            </Transform>
            <Transform DEF='HorizontalColumnTransform5' translation='0 3.80 0'>
                <Shape USE='HorizontalColumnShape'/>
            </Transform>
            <Transform DEF='HorizontalColumnTransform6' translation='0 7.60 0'>
                <Shape USE='HorizontalColumnShape'/>
            </Transform>
        </Transform>
        
        <!-- Steps Hall - Divided into GroupSteps - Pattern: 2B-1R-4B-1R-2B -->
        <!-- Center: [horizontal] between 5th and 6th group step -->
        <!-- Center: [vertical] top of the steps (the whole Steps) -->
        <!-- Center: ['depth'] at the tail-end of the GroupSteps -->
        <Transform DEF='StepsHall' translation='0 1.00 0.5'>
            <Transform DEF='GroupStepsTransform1' translation='-6.30 -0.52 1.24'>
                <Group DEF='BlackGroupStepsGroup'>
                    <!-- 'Base' for the GroupSteps -->
                    <Transform DEF='GroupStepsBaseGroup'>
                        <!-- 'lower' part -->
                        <Shape DEF='GroupStepsBaseLower'>
                            <Appearance DEF='BlackStepAppearance'>
                                <Material DEF='BlackStepMaterial' diffuseColor='0.3 0.3 0.3'/>
                            </Appearance>
                            <Box size='1.40 1.00 2.48'/>
                        </Shape>
                        <!-- 'upper' part - Slightly ahead -->
                        <Transform DEF='GroupStepBaseUpperTransform' translation='0 0.51 0.01'>
                            <Shape DEF='GroupStepsBaseUpper'>
                                <Appearance USE='BlackStepAppearance'/>
                                <Box size='1.40 0.02 2.50'/>
                            </Shape>
                        </Transform>
                    </Transform>
                </Group>
            </Transform>
        </Transform>
    </Scene>
</X3D>